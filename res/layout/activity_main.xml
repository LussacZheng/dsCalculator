<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linlay_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <TextView
        android:id="@+id/tv_expression"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="19"
        android:background="#0DCFF6"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top|right"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingRight="5dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_fractionAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="19"
        android:background="#0DCFF6"
        android:gravity="top|right"
        android:paddingRight="5dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_weight="17"
        android:background="#0DCFF6"
        android:editable="false"
        android:gravity="bottom|right"
        android:textColor="#FFFFFF"
        android:textColorHint="#66FFFF"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="17"
        android:gravity="top|center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="6"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="6"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:text="del"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_leftParenthesis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|left"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="("
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_rightParenthesis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="7"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:text=")"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="@string/multiplication_sign"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:layout_weight="17"  >

        <Button
            android:id="@+id/btn_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="@string/division_sign"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:layout_weight="17"  >

        <Button
            android:id="@+id/btn_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:layout_weight="17"  >

        <Button
            android:id="@+id/btn_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:layout_weight="17"  >

        <Button
            android:id="@+id/btn_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/blue_selector"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/blue_selector"
            android:gravity="center"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </LinearLayout>

</LinearLayout>